@page "/"


    <MudItem Style="">
     <!-- <h1 style="text-align: center">NutriFinder</h1> -->  
    </MudItem>


<MudPaper Outlined=false Class="d-flex justify-center flex-row flex-grow-1 gap-4" Elevation="0">

        <MudForm @ref="form">

            <MudPaper Class="d-inline-flex mr-12" Elevation="0"><MudTextField Variant="Variant.Outlined" T="string" Label="Food" @ref="food" Margin="Margin.Dense" /></MudPaper>


            <MudPaper Class="d-inline-flex" Outlined=false Elevation="0">
            <MudButton Class="mr-8 rounded-pill" Variant="Variant.Filled" Color="Color.Primary" DisableElevation="true" OnClick="@(()=>form.Validate())">Search</MudButton>
            <MudButton Class="rounded-pill" Variant="Variant.Filled" Color="Color.Secondary" DisableElevation="true" OnClick="@(()=>form.ResetAsync())">Reset</MudButton>
        </MudPaper>
        </MudForm>
    </MudPaper>

<MudPaper Class="d-flex justify-center" Outlined=true Square=true>

    <MudPaper Class="d-flex flex-row flex-grow-1 gap-4" Elevation="0">
        <MudPaper Class="d-inline-flex flex-column" Elevation="0">
            <MudListItem>Food</MudListItem>
            <MudListItem>Serving Size</MudListItem>
        </MudPaper>

        <MudPaper Class="d-inline-flex flex-column" Elevation="0">
            <MudListItem>Calories</MudListItem>
            <MudListItem>Carbohydrates, Proteins, and Fiber</MudListItem>
        </MudPaper>
    </MudPaper>


</MudPaper>




@code {
    MudForm form;
    MudTextField<string> food;
}
